<div id="event">
	<div class='text-center'>
		<p class='italics'>upcoming</p>
		<h2 class='title upcase'>
			c.a.r.e events
		</h2>
	</div>
	<div class='row'>
		<div class='col-sm-12'>
			<%= month_calendar events:Event.all.each do |date,obj| %>
				<%= month_date(date) %><br>
			  <%#= date %>
			  <% if obj.present? %>
			  	<a data-toggle="modal" data-target="#eventModal<%=obj.first.id%>">
			  		<span class='italics'><%= obj.first.title %></span>
			  	</a>
			  <% end %>
			<% end %>
		</div>
	</div>
</div>

<% Event.all.each do |e| %>
<div class="modal fade" id="eventModal<%=e.id%>" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title title" id="eventModalLabel"><%= e.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<table class="table table-sm borderless">
      		<tr>
      			<td><b>Description:</b></td>
   					<td><%= e.description %></td>
      		</tr>
      		<tr>
      			<td><b>Start Date:</b></td>
      			<td><%= e.start_date %></td>
      		</tr>
      		<tr>
      			<td><b>End Date:</b></td>
      			<td><%= e.end_date %></td>
      		</tr>
      	</table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% end %>